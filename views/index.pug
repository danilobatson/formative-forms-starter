extends layout

block content
  main
    h2 Existing Users
    table.pure-table.pure-table-striped
      thead
        tr
          th id
          th First Name
          th Last Name
          th Email
          th Age
          th Favorite Beatle
          th Likes Ice Cream

      tbody
        each user in users
          tr
            td= user.id
            td= user.firstName
            td= user.lastName
            td= user.email
            td= user.age
            td= user.favoriteBeatle
            td= user.iceCream
  footer
